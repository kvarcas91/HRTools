<prism:PrismApplication x:Class="HRTools_v2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
              xmlns:prism="http://prismlibrary.com/">
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="BlueGrey" SecondaryColor="Red"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />

                <ResourceDictionary Source="/Resources/Values/Dim.xaml"/>
                <ResourceDictionary Source="/Resources/Colors/Colors.xaml"/>
                <ResourceDictionary Source="/Resources/Animations/Anim.xaml"/>
                
                <ResourceDictionary Source="/Resources/Styles/ListBox.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/ListView.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/Scroll.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</prism:PrismApplication>
