                                    VerticalAlignment="Bottom"
                        Margin="10 0 10 0"/>

                                <TextBlock Grid.Row="2"
                        Text="Disciplinary Scheduled"
                                FontSize="{StaticResource DashboardMinValueHeader}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Padding="0 2 0 0"
                                Foreground="Gray"
                                Typography.Capitals="AllSmallCaps"
                            Style="{StaticResource MaterialDesignOverlineTextBlock}"
                                TextTrimming="CharacterEllipsis"
                                        MaxWidth="160"/>


                            </Grid>

                            <!-- Cancelled -->
                            <Grid Margin="10"
                            Width="150">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Place holder -->
                                <ProgressBar Grid.Row="0"
                            Style="{StaticResource MaterialDesignCircularProgressBar}"
                                       Visibility="{Binding IsMetricsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                            IsIndeterminate="True"
                                         Width="80"
                                        Height="80" Margin="0 5"/>

                                <Border Padding="8 15"
                            Visibility="{Binding IsMetricsLoading, Converter={StaticResource InverseBoolToVisConverter}}">

                                    <TextBlock Grid.Column="1"
                            VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                        Padding="0 2 0 0"
                        TextTrimming="CharacterEllipsis">
                                <Run Text="{Binding AwalMetrics.CancelledCount}" 
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                         FontSize="{StaticResource DashboardSecondaryValue}"/>
                                    </TextBlock>

                                </Border>

                                <Separator Grid.Row="1"
                                Width="{StaticResource DashboardSeparatorWidth}"
                                    VerticalAlignment="Bottom"
                        Margin="10 0 10 0"/>

                                <TextBlock Grid.Row="2"
                        Text="Cancelled"
                                FontSize="{StaticResource DashboardMinValueHeader}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Padding="0 2 0 0"
                                Foreground="Gray"
                                Typography.Capitals="AllSmallCaps"
                            Style="{StaticResource MaterialDesignOverlineTextBlock}"
                                TextTrimming="CharacterEllipsis"
                                        MaxWidth="160"/>


                            </Grid>

                        </StackPanel>

                    </Grid>


                </Grid>

            </TabItem>

        </TabControl>

    </Grid>

</UserControl>
